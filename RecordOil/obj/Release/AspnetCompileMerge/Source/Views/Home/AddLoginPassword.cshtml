@using Microsoft.AspNet.Identity
@using System.Security.Principal
@model RecordOil.Models.Autorize
<div class="modal-header" style="text-align: center;background-color: #D0EDFE; border-radius:5px;">
    <h5><b> Добавление Login & Password</b></h5>
</div>
<div class="modal-body">


    <table>
        <tr>
            <td>
                <label>Login</label>
            </td>
            <td>
                &nbsp;&nbsp;
            </td>
            <td>
                <label>Password</label>
            </td>
            <td>
                &nbsp;&nbsp;
            </td>
            <td>
                <label>Пользователь</label>
            </td>

        </tr>
        <tr>
            <td>
                <input type="text" class="form-control btn-block" id="Logi" />
            </td>
            <td>
                &nbsp;&nbsp;
            </td>
            <td>
                <input type="text" class="form-control btn-block" id="Passw" />
            </td>
            <td>
                &nbsp;&nbsp;
            </td>
            <td>
                @Html.DropDownList("LastName", ViewBag.USERSEL as SelectList, "Выберите пользователя", new { @class = "form-control btn-block", id = "idUS" })
            </td>
    </table>
    <center><label>Роли:</label></center>
            
           @{ 
               int u = 0;
           }
<table id="RT">

    @foreach (var item in ViewBag.Rol)
    {
        u++;
        <tr style="background-color:white">
            <td>
                <input type="checkbox" id="role_@u" class="checkbox" name="inList" value="@item.IdR">
            </td>
            <td>&nbsp;&nbsp;</td>
            <td>
                @item.Name
            </td>
        </tr>
    }
</table>
                    

    <input type="hidden" class="form-control btn-block" id="UserLog" value="@User.Identity.GetUserName()" />
    <input type="hidden" class="form-control btn-block" id="DateLog" value="@DateTime.Now" />
</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-default" style="min-width:100px" onclick="LoginPasswordSave(0)">Сохранить</button>
    <button type="button" class="btn btn-info" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>




