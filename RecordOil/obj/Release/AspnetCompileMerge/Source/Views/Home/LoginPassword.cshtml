@model IEnumerable<RecordOil.Models.Autorize>

<div id="ServicesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" id='ServicesModalContent'>

        </div>
    </div>
</div>

<div id="ServicesModalDelete" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id='ServicesModalDeleteContent'>

        </div>
    </div>
</div>

<style type="text/css">
    TH {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<h3>Зарегистрированные пользователи</h3>

<p>
    <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="AddLoginPassword(0)"><i class="mdi mdi-library-plus"></i> Добавить</button>
</p>

<table class="table">
    <tr>
        <th>
            Login
        </th>

        <th>
            Password
        </th>

        <th>
            Пользователь
        </th>
        <th>
            Созд./Изм.
        </th>
        <th>
            Дата
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Login)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
    <td>
        @if (item.RoleId != null)
        {
            @item.Users.LastName @item.Users.FirstName @item.Users.MidleName
        }
        else
        {

        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserModific)
    </td>
    <td>
        @if (item.DateModific != null)
        {
        @Convert.ToDateTime(item.DateModific).ToString("d")
        }
        else
                {

                }
    </td>
    <td>
        <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="LoginEdit(@item.ID)"> <i class="mdi mdi-settings"></i>Редактировать</button>
        <button type="button" class="btn btn-icon waves-effect waves-light btn-danger" onclick="DeleteLogin(@item.ID)"> <i class="mdi mdi-delete"></i>Удалить</button>
    </td>
</tr>
    }

</table>