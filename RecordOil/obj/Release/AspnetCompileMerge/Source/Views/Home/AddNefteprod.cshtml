@using Microsoft.AspNet.Identity
@using System.Security.Principal
@model RecordOil.Models.Nefteproduct
<div class="modal-header" style="text-align: center;background-color: #D0EDFE; border-radius:5px;">
    <h5><b> Добавление нефтепродукта</b></h5>
</div>
<div class="modal-body">

    <label>Наименование</label>
    <input type="text" class="form-control btn-block" id="NaimenovanieNeft" />

    <label>Плотность, т/ м<sup><small>3</small></sup></label>
    <input type="text" class="form-control btn-block" id="PNeft" onkeyup="this.value = this.value.replace(/[^(0-9)(,)]/,'');"/>

    <label>Примечание</label>
    <input type="text" class="form-control btn-block" id="PrimNeft" />

    <input type="hidden" class="form-control btn-block" id="UserNeft" value="@User.Identity.GetUserName()" />
    <input type="hidden" class="form-control btn-block" id="DateNeft" value="@DateTime.Now" />
</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-default" style="min-width:100px" onclick="NefteprodSave(0)">Сохранить</button>
    <button type="button" class="btn btn-info" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>



