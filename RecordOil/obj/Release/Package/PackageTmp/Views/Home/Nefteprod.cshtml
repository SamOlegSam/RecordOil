@model IEnumerable<RecordOil.Models.Nefteproduct>

<div id="ServicesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" id='ServicesModalContent'>

        </div>
    </div>
</div>

<div id="ServicesModalDelete" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id='ServicesModalDeleteContent'>

        </div>
    </div>
</div>

<style type="text/css">
    TH {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<h3>Нефтепродукты</h3>

<p>
    <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="AddNefteprod(0)"><i class="mdi mdi-library-plus"></i> Добавить</button>
</p>

<table class="table">
    <tr>
        <th>
            Наименование
        </th>

        <th>
            Плотность, т/ м<sup><small>3</small></sup>
        </th>

        <th>
            Примечание
        </th>

        <th>
            Признак
        </th>

        <th>
            Созд./Изм.
        </th>

        <th>
            Дата создания
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naimenovanie)
            </td>
            <td>
                @Convert.ToDouble(item.P)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Primech)
            </td>
            @{
                string uuu = "";
                if (item.PriznakIsp == 0)
                {
                    uuu = "Не используется в расчетах";
                }
                else
                {
                    uuu = "Используется в расчетах";
                }
            }
            <td>
                @uuu
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserModific)
            </td>
            <td>
                @Convert.ToDateTime(item.DateModific).ToString("d")
            </td>

            <td>
                <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="NeftEdit(@item.IdNeft)"> <i class="mdi mdi-settings"></i>Редактировать</button>
                <button type="button" class="btn btn-icon waves-effect waves-light btn-danger" onclick="DeleteNeft(@item.IdNeft)"> <i class="mdi mdi-delete"></i>Удалить</button>
            </td>
        </tr>
    }

</table>
<script>
    document.addEventListener('keydown', function (event) {
        if (event.code == 'Escape') {
            $('#ServicesModal').modal('hide');
        }
    });
</script>
<script>
    document.addEventListener('keydown', function (event) {
        if (event.code == 'Escape') {
            $('#ServicesModalDelete').modal('hide');
        }
    });
</script>