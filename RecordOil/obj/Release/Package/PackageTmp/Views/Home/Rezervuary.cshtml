@model IEnumerable<RecordOil.Models.Rezervuary>

<div id="ServicesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" id='ServicesModalContent'>

        </div>
    </div>
</div>

<div id="ServicesModalDelete" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id='ServicesModalDeleteContent'>

        </div>
    </div>
</div>

<style type="text/css">
    TH {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<h3>Резервуары</h3>

<p>
    <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="AddRezer(0)"><i class="mdi mdi-library-plus"></i> Добавить</button>
</p>

<table class="table">
    <tr>
        <th>
            Наименование
        </th>

        <th>
            Объем полезный
        </th>

        <th>
            Объем итоговый
        </th>

        <th>
            Филиал
        </th>

        <th>
            Пользователь
        </th>

        <th>
            Дата создания
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {        
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Naimenovanie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Vpolezn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Vitog)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sklad.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserModific)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateModific)
    </td>

    <td>
        <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="RezerEdit(@item.IdRez)"> <i class="mdi mdi-settings"></i>Редактировать</button>
        <button type="button" class="btn btn-icon waves-effect waves-light btn-danger" onclick="DeleteRezer(@item.IdRez)"> <i class="mdi mdi-delete"></i>Удалить</button>
    </td>
</tr>
    }

</table>