@model IEnumerable<RecordOil.Models.Organization>

<div id="ServicesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content" id='ServicesModalContent'>

        </div>
    </div>
</div>

<div id="ServicesModalDelete" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" id='ServicesModalDeleteContent'>

        </div>
    </div>
</div>

<style type="text/css">
    TH {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<h3>Организации</h3>

<p>
    <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="AddOrganiz(0)"><i class="mdi mdi-library-plus"></i> Добавить</button>
</p>

<table class="table">
    <tr>
        <th>
            Наименование
        </th>

        <th>
            Признак
        </th>

        <th>
            Префикс
        </th>

        <th>
            Создал / Изменил
        </th>

        <th>
            Дата создания
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        string d = "";
        if (item.Priznak == 1)
        {
            d = "Филиал";
        }
        if (item.Priznak == 2)
        {
            d = "Сторонняя организация";
        }
        if (item.Priznak == 3)
        {
            d = "Что-то другое";
        }

<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @d
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Prefix)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserModific)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateModific)
    </td>

    <td>
        <button type="button" class="btn btn-icon waves-effect waves-light btn-info" onclick="OrganizEdit(@item.IdOrg)"> <i class="mdi mdi-settings"></i>Редактировать</button>
        <button type="button" class="btn btn-icon waves-effect waves-light btn-danger" onclick="DeleteOrganiz(@item.IdOrg)"> <i class="mdi mdi-delete"></i>Удалить</button>
    </td>
</tr>
    }

</table>
<script>
    document.addEventListener('keydown', function (event) {
        if (event.code == 'Escape') {
            $('#ServicesModal').modal('hide');
        }
    });
</script>
<script>
    document.addEventListener('keydown', function (event) {
        if (event.code == 'Escape') {
            $('#ServicesModalDelete').modal('hide');
        }
    });
</script>