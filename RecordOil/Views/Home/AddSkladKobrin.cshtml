@using Microsoft.AspNet.Identity
@using System.Security.Principal
@model RecordOil.Models.Sklad
<div class="modal-header" style="text-align: center;background-color: #D0EDFE; border-radius:5px;">
    <h5><b> Добавление склада</b></h5>
</div>
<div class="modal-body">

    <label>Название</label>
    <input type="text" class="form-control btn-block" id="NameSklad" />

    @*<label>Филиал</label>
    @Html.DropDownList("Name", ViewBag.FilUs as SelectList, "Выберите филиал", new { @class = "form-control btn-block", id = "idFilS" })*@


    <input type="hidden" class="form-control btn-block" id="UserSklad" value="@User.Identity.GetUserName()" />
    <input type="hidden" class="form-control btn-block" id="DateSklad" value="@DateTime.Now" />
</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-default" style="min-width:100px" onclick="SkladSaveKobrin(0)">Сохранить</button>
    <button type="button" class="btn btn-info" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>
